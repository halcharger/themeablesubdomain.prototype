@{
    var themeLayoutFile = Session["ThemeLayoutFile"] as string ?? string.Empty;
    var layoutFile = (string.IsNullOrEmpty(themeLayoutFile) || !File.Exists(HttpContext.Current.Server.MapPath(themeLayoutFile))) 
                ? "~/Views/Shared/_Layout.cshtml" 
                : themeLayoutFile;
    Layout = layoutFile;
}
